@model it_aud9_mvc.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User With This Email To Role</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.Email)
        @Html.TextBoxFor(z => z.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @*rezultatot se zachuvuva vo SelectedRole, a se bira od Roles*@

        @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Save</button>
}

